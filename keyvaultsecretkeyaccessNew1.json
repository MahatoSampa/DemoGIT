{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachine_name": {
      "type": "string",
      "defaultValue": ""
    },
    "vmLocation": {
      "type": "string",
      "defaultValue": ""
    },
    "aadClientID": {
      "type": "string",
      "defaultValue": ""
    },
    "aadClientSecret": {
      "type": "string",
      "defaultValue": ""
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": ""
    },
    "keyVaultResourceGroup": {
      "type": "string",
      "defaultValue": ""
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": ""
    },
    "publicSSHKey": {
      "type": "string",
      "defaultValue": ""
    },
    "extensionName": {
      "type": "string",
      "defaultValue": ""
    },
    "extensionVersion": {
      "type": "string",
      "defaultValue": ""
    },
    "keyEncryptionAlgorithm": {
      "type": "string",
      "defaultValue": ""
    },
    "keyVaultURL": {
      "type": "string",
      "defaultValue": ""
    },
    "keyVaultResourceID": {
      "type": "string",
      "defaultValue": ""
    }
  },
  "variables": {

  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2015-06-15",
      "location": "[parameters('vmLocation')]",
      "name": "[concat(parameters('virtualMachine_name'), '/Microsoft.Insights.VMDiagnosticSettings')]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [ "https://capitalmarketdevopsdiag.blob.core.windows.net/devops/LinuxVMMountFile2.sh?sp=r&st=2020-04-06T13:07:19Z&se=2021-04-06T21:07:19Z&spr=https&sv=2019-02-02&sr=b&sig=N0bA1%2BTWpHSpA7MQa0usMkibvIUbk%2B%2BSLe9o5erD6Sc%3D" ],
          "commandToExecute": "sh LinuxVMMountFile2.sh"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('virtualMachine_name'),'/', parameters('extensionName'))]",
      "apiVersion": "2015-06-15",
      "location": "[parameters('vmLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines/extensions', parameters('virtualMachine_name'), 'Microsoft.Insights.VMDiagnosticSettings')]"
      ],
      "properties": {
        "protectedSettings": {
          "AADClientSecret": "[parameters('aadClientSecret')]",
          "Passphrase": ""
        },
        "publisher": "Microsoft.Azure.Security",
        "settings": {
          "AADClientID": "[parameters('aadClientID')]",
          "DiskFormatQuery": "",
          "EncryptionOperation": "EnableEncryption",
          "KeyEncryptionAlgorithm": "[parameters('keyEncryptionAlgorithm')]",
          "KeyEncryptionKeyURL": "",
          "KeyVaultURL": "[parameters('keyVaultURL')]",
          "SequenceVersion": "1",
          "VolumeType": "All"
        },
        "type": "AzureDiskEncryptionForLinux",
        "typeHandlerVersion": "[parameters('extensionVersion')]"
      }
    },
    {
      "apiVersion": "2018-06-01",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('virtualMachine_name')]",
      "location": "[parameters('vmLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines/extensions', parameters('virtualMachine_name'), parameters('extensionName'))]"
      ],
      "properties": {
        "storageProfile": {
          "osDisk": {
            "encryptionSettings": {
              "diskEncryptionKey": {
                "sourceVault": {
                  "id": "[parameters('keyVaultResourceID')]"
                },
                "secretUrl": "[reference(resourceId('Microsoft.Compute/virtualMachines/extensions',  parameters('virtualMachine_name'), parameters('extensionName'))).instanceView.statuses[0].message]"
              }
            }
          }
        }
      }
    }
  ],
  "outputs": {
  }
}